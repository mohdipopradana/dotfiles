// Place your key bindings in this file to override the defaultsauto[]
[
  // PYTHON SETTINGS
  {
    "key": "ctrl+enter",
    "command": "notebook.cell.execute",
    "when": "notebookCellListFocused && notebookMissingKernelExtension && !notebookCellExecuting && notebookCellType == 'code' || notebookCellListFocused && !notebookCellExecuting && notebookCellType == 'code' && notebookKernelCount > 0 || notebookCellListFocused && !notebookCellExecuting && notebookCellType == 'code' && notebookKernelSourceCount > 0"
  },
  {
    "key": "ctrl+escape",
    "command": "notebook.cell.quitEdit",
    "when": "inputFocus && notebookEditorFocused && notebookCellType == 'markup'"
  },
  {
    "key": "ctrl+enter",
    "command": "jupyter.execSelectionInteractive",
    "when": "editorTextFocus && isWorkspaceTrusted && jupyter.ownsSelection && !findInputFocussed && !jupyter.webExtension && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python'"
  },
  {
    "key": "ctrl+enter",
    "command": "python.execSelectionInTerminal",
    "when": "editorTextFocus && !findInputFocussed && !jupyter.ownsSelection && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python'"
  },

  // Split file
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.splitEditor"
  },

  // TERMINAL SETTINGS
  {
    "key": "ctrl+]",
    "command": "workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  // FILE TREE SETTINGS
  {
    "key": "shift+x",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarVisible && vim.mode == 'Normal'"
  },

  {
    "key": "shift+x",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "editorTextFocus &&  vim.mode == 'Normal'"
  },

  {
    "key": "shift+5",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },

  {
    "key": "shift+r",
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },

  {
    "key": "d",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },

  {
    "key": "shift+d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
  },

  {
    "key": "Alt+Shift+z",
    "command": "workbench.action.openGlobalKeybindings"
  },

  {
    "key": "ctrl+'",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+o",
    "command": "-workbench.action.files.openFileFolder",
    "when": "isMacNative && openFolderWorkspaceSupport"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.files.openFolder",
    "when": "openFolderWorkspaceSupport"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.closeFolder"
  },

  // Auto suggestion or auto completion
  {
    "key": "tab",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "tab",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "down",
    "command": "-selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "shift+tab",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "shift+tab",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "up",
    "command": "-selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+\\",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "shift+t",
    "command": "workbench.action.openRecent",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+q",
    "command": "workbench.action.closeWindow"
  }
]

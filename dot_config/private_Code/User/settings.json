    "editorSuggestWidget.selectedForeground": "#000000",
    "editorSuggestWidget.foreground": "#ffffff",
    "editorSuggestWidget.highlightForeground": "#ffffff",
    "editorSuggestWidget.focusHighlightForeground": "#000000",
    "editorSuggestWidget.border": "#458588",
    // Background color of input box while open input list
    // "input.background": "#191919",
    // Color of list option while open input list
    // "quickInput.background": "#0f0f0f",
    "list.activeSelectionBackground": "#3c3836",
    "list.activeSelectionForeground": "#ffffff",
    // Background color of selected list in open input list
    // "list.activeSelectionBackground": "#778aed",
    // Foreground color of selected list in open input list
    // "list.activeSelectionForeground": "#ffffff",
    // Foreground color of activity bar in left side of editor
    "activityBar.background": "#1d2021",
    "activityBar.activeBorder": "#ffffff",
    "activityBar.inactiveForeground": "#80B3B2",
    // "activityBar.inactiveForeground": "#659bba",
    "activityBar.foreground": "#ffffff",
    // Border color of active tab

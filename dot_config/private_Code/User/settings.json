    // Foreground color of badge of activity bar in left side of editor
    "activityBarBadge.foreground": "#000000",
    // Background color of status bar in bottom side of editor
    "statusBar.background": "#32302f",
    // Foreground color of status bar in bottom side of editor
    "statusBar.foreground": "#ffffff",
    // Background color of remote shell such as wsl or ssh in bottom side of editor
    "statusBarItem.remoteBackground": "#32302f",
    // Foreground color of remote shell such as wsl or ssh in bottom side of editor
    "statusBarItem.remoteForeground": "#ffffff"


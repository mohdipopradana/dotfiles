    // Background color of selected list in open input list
    // "list.activeSelectionBackground": "#2a6485",
    // Foreground color of selected list in open input list
    // "list.activeSelectionForeground": "#ffffff",
    // Foreground color of activity bar in left side of editor
    // "activityBar.background": "#1d2021",
    // "activityBar.activeBorder": "#ffffff",

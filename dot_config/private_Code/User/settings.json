  // TERMINAL SETTINGS
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.inheritEnv": false,

  // LSP, FORMATTER, AND LINTER
  // PYTHON SETTINGS
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingModuleSource": "none"
  },
  "[python]": {
    "editor.formatOnSave": true,
    // "editor.defaultFormatter": "ms-python.black-formatter",
    "ruff.enable": false,
    "ruff.fixAll": false,
    "python.languageServer": "Pylance"
  },

  // JUPYTER NOTEBOOK SETTINGS
  "notebook.output.fontFamily": "FiraCode Nerd Font",
  "notebook.output.fontSize": 14,

  //JSON SETTINGS
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // OTHERS
  "update.showReleaseNotes": false,
  "breadcrumbs.enabled": false,
  "git.openRepositoryInParentFolders": "always",
  "go.toolsManagement.checkForUpdates": "off",
  "http.proxySupport": "on",
  "redhat.telemetry.enabled": false,

  // VIM SETTINGS INITIALIZE
  "vim.leader": "<Space>",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,

  // VIM MOTION IN NORMAL MODE
  "vim.normalModeKeyBindingsNonRecursive": [
    // switch between tab that was opened
    {
      "before": ["<S-h>"],
      "commands": [":bprevious"]
    },
    {
      "before": ["<S-l>"],
      "commands": [":bnext"]
    },
    // Splits editor vertically and horizontally
    {
      "before": ["v", "s"],
      "commands": [":vsplit"]
    },
    {
      "before": ["h", "s"],
      "commands": [":split"]
    },
    // Switch between editor that was splitted
    {
      "before": ["leader", "leader"],
      "commands": ["workbench.action.focusPreviousGroup"]
    },
    {
      "before": ["leader", "leader"],
      "commands": ["workbench.action.focusNextGroup"]
    },
    // Keymap to save a working file
    {
      "before": ["<C-s>"],
      "commands": [":w"]
    },
    // Keymap to save and quit a working file
    {
      "before": ["<C-x>"],
      "commands": [":x"]
    },
    // Keymap to quit working file
    {
      "before": ["<C-q>"],
      "commands": [":q"]
    },
    // Keymap for diagnostic error
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },

    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    // Keymap for telescopic wannabe
    // Opening recent file
    {
      "before": ["<S-t>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["c", "l"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<S-d>"],
      "commands": ["workbench.action.showCommands"]
    }
  ],

  // VIM MOTION IN VISUAL MODE
  "vim.visualModeKeyBindings": [
    // Keymap to save a working file
    {
      "before": ["<C-s>"],
      "commands": [":w"]
    },
    // Keymap to save and quit a working file
    {
      "before": ["<C-x>"],
      "commands": [":x"]
    },
    // Keymap to quit working file
    {
      "before": ["<C-q>"],
      "commands": [":q"]
    },
    // Indenting line in visual mode
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    // Keymap to move line constantly in visual mode
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    // Commenting line
    {
      "before": ["c", "l"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "security.allowedUNCHosts": ["wsl.localhost"],
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "eslint.format.enable": true,
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.sideBar.location": "right"
}
